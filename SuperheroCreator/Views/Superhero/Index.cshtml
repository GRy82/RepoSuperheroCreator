@model IEnumerable<SuperheroCreator.Models.Superhero>

@{
    ViewData["Title"] = "Index";
}

<h1>The OFFICIAL Superhero Database</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Hero Name
            </th>
            <th>
                Civilian Name
            </th>
            <th>
                Primary Power
            </th>
            <th>
                Secondary Power
            </th>
            <th>
                Catchphrase
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.HeroName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CivilianName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrimaryAbility)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SecondaryAbility)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CatchPhrase)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.SuperheroId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.SuperheroId">@item.HeroName</a> |
                <a asp-action="Delete" asp-route-id="@item.SuperheroId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
