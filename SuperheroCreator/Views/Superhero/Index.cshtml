@model IEnumerable<SuperheroCreator.Models.Superhero>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.HeroName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CivilianName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrimaryAbility)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SecondaryAbility)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CatchPhrase)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (Superhero superhero in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => superhero.HeroName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => superhero.CivilianName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => superhero.PrimaryAbility)
            </td>
            <td>
                @Html.DisplayFor(modelItem => superhero.SecondaryAbility)
            </td>
            <td>
                @Html.DisplayFor(modelItem => superhero.CatchPhrase)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@superhero.SuperheroId">Edit</a> |
                <a asp-action="Details" asp-route-id="@superhero.SuperheroId">Details</a> |
                <a asp-action="Delete" asp-route-id="@superhero.SuperheroId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
