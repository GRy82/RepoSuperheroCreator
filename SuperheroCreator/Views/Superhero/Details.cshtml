@model SuperheroCreator.Models.Superhero

@{
    ViewData["Title"] = "Details";
}

<h1>@Html.DisplayFor(model => model.HeroName)</h1>

<hr />
<div>
    <h4>Bio</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Hero Name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.HeroName)
        </dd>
        <dt class = "col-sm-2">
            Civilian Name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CivilianName)
        </dd>
        <dt class = "col-sm-2">
            Primary Power
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PrimaryAbility)
        </dd>
        <dt class = "col-sm-2">
            Secondary Power
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SecondaryAbility)
        </dd>
        <dt class = "col-sm-2">
            Catchphrase
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CatchPhrase)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.SuperheroId">Edit</a> |
    <a asp-action="Delete" asp-route-id="@Model.SuperheroId">Delete</a> |
    <a asp-action="Index">Back to List</a>
</div>
